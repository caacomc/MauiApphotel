<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApphotel.Views.ContratacaodaHospedagem"
             Title="ContratacaodaHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray300}">
             
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="30">
        <Label Text="Calculo da Diaria"
               FontFamily="StoryScript-Regular"
               FontSize="50"
               TextColor="{StaticResource PrimaryDarkText}"/>

        <Frame Padding="10"
               CornerRadius="20"
               BackgroundColor="White">

            <VerticalStackLayout>
                <Grid RowDefinitions="auto, auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           FontAttributes="Bold"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource PrimaryDarkText}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />


                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"
                           FontAttributes="Bold"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource PrimaryDarkText}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                </Grid>

                <Label Text="Escolha sua Suite"
                       FontAttributes="Bold"/>

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua acomodação" />

                <Frame Padding="10"
                       Margin="10" 
                       CornerRadius="15"
                       BackgroundColor="#f7f7f7">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia"
                               FontAttributes="Bold"/>

                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />

                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar" HorizontalOptions="Center"
                         BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            Margin="0,10,0,0">
                </Button>

                <Button Text="Sobre o App" HorizontalOptions="Center"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                        Clicked="OnSobreClicked" >
                </Button>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
    
</ContentPage>